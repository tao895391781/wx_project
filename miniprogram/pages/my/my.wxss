/* miniprogram/pages/my/my.wxss */
page{
  height: 100%;
}
.mys{
  background: #fff;
}
/* header开始 */
.mys .header{
  height:180rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #1daca9;
}
.mys .header view text{
  font-size: 26rpx;
  text-indent: 20rpx;
  color: #fff;
  letter-spacing: 2rpx;
}
.image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border:4rpx solid #fff;
  overflow: hidden;
  margin-left: 20rpx;
}
.image image{
  width: 100%;
  height: 100%;
}
.name{
  width:50%;
  margin-left: 30rpx;
}
.seeMain{
  flex: 1;
}
/* header结束 */
/* mytable开始 */
.myTable{
  display: -webit-flex;
  display: flex;
  flex-wrap: wrap;
}
.myTable>view{
  width:25%;
  text-align: center;
  margin-top: 35rpx;
}
.myTable>view>view{
  width:70rpx;
  height: 70rpx;
  margin: 10rpx auto 0;
  border-radius: 10rpx;
  color: #fff;
  line-height: 70rpx;
}
.myTable>view>view>text{
  font-size: 40rpx;
}
.myTable>view>text{
 font-size: 26rpx;
 color: #666;
 letter-spacing: 2rpx;
}
