/* miniprogram/pages/home/home.wxss */
.header{
  margin: 20rpx 0;
  height: 200rpx;
  white-space: nowrap;
  background: #f2f2f2;
}
.mycircles{
  display: inline-block;
  width: 170rpx;
  height: 170rpx;
  margin: 15rpx 4rpx 15rpx 15rpx;
}
.mycircles .myCircle{
  height: 100%;
  background: #e2a68a;
  text-align: center;
  border-radius: 15rpx;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
.mycircles .myCircle view {
  width: 100%;
}
.mycircles .myCircle view text{
  display: block;
  font-size: 54rpx;
  color: #fff;
}
.mycircles .myCircle view .text{
  font-size: 28rpx;
}
.circle1{
  display: inline-block;
  vertical-align: top;
  height:  170rpx;
  width: 220rpx;
  border-radius: 15rpx;
  margin: 15rpx 4rpx;
  position: relative;
  overflow: hidden;
  background-size: 100% 100%;
}
.circle1::before{
  content:'';
  width: 100%;
  height: 100%;
  position: absolute;
  left:0;
  right:0;
  background: rgba(0,0,0,.5);

}
.circle1:last-child{
  margin-right: 15rpx;
}
.circle1>text{
  display: block;
  width: 90%;
  height:120rpx;
  margin-left: 10rpx;
  letter-spacing: 1px;
  font-size: 28rpx;
  position: relative;
  top:-20rpx;
  color: #fff;
  white-space:pre-line;  
}
.circle1 .card {
  position: relative;
  top: -14rpx;
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
}
.circle1 .card .cardText{
    padding: 0 10rpx;
    font-size: 24rpx;
    height: 100%;
    display: inline-block;
    margin: 0 15rpx;
    line-height: 40rpx;
    background: #1daca9;
    border-radius: 6rpx;
}
.circle1 .card .icon{
    background: #fc642d;
    float: right;
    font-size: 24rpx;
    padding: 0 0 0 15rpx;
    border-radius: 30rpx 0 0 30rpx;
}